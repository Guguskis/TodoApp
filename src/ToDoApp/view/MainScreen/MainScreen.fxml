        </VBox>
    </left>
    <right>
        <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="logoutButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false"
                        onAction="#logout" text="Logout"/>
            </children>
        </VBox>
    </right>
</BorderPane>
