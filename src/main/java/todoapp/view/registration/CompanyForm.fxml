<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<HBox style="-fx-background-color: #333;" xmlns="http://javafx.com/javafx/10.0.2-internal"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="main.java.todoapp.controller.registration.CompanyFormController">
    <children>
        <VBox minHeight="256.0" prefHeight="200.0" prefWidth="100.0">
            <children>
                <Text fill="#aaaaaa" fontSmoothingType="LCD" strokeType="OUTSIDE" strokeWidth="0.0" text="Username">
                    <font>
                        <Font name="Comic Sans MS" size="18.0"/>
                    </font>
                    <VBox.margin>
                        <Insets bottom="10.0"/>
                    </VBox.margin>
                </Text>
                <Text fill="#aaaaaa" fontSmoothingType="LCD" strokeType="OUTSIDE" strokeWidth="0.0" text="Password">
                    <font>
                        <Font name="Comic Sans MS" size="18.0"/>
                    </font>
                    <VBox.margin>
                        <Insets bottom="10.0"/>
                    </VBox.margin>
                </Text>
                <Text fill="#aaaaaa" fontSmoothingType="LCD" strokeType="OUTSIDE" strokeWidth="0.0" text="Company name">
                    <font>
                        <Font name="Comic Sans MS" size="18.0"/>
                    </font>
                    <VBox.margin>
                        <Insets bottom="10.0"/>
                    </VBox.margin>
                </Text>
                <Text fill="#aaaaaa" fontSmoothingType="LCD" strokeType="OUTSIDE" strokeWidth="0.0"
                      text="Contact person phone">
                    <font>
                        <Font name="Comic Sans MS" size="18.0"/>
                    </font>
                    <VBox.margin>
                        <Insets bottom="10.0"/>
                    </VBox.margin>
                </Text>
            </children>
            <opaqueInsets>
                <Insets/>
            </opaqueInsets>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
        </VBox>
        <VBox style="-fx-background-color: #333;">
            <children>
                <TextField fx:id="username" maxWidth="250.0" nodeOrientation="RIGHT_TO_LEFT"
                           style="-fx-background-color: #377;">
                    <VBox.margin>
                        <Insets bottom="10.0"/>
                    </VBox.margin>
                </TextField>
                <PasswordField fx:id="password" accessibleRole="TEXT_FIELD" maxWidth="250.0"
                               nodeOrientation="RIGHT_TO_LEFT" style="-fx-background-color: #377;">
                    <VBox.margin>
                        <Insets bottom="10.0"/>
                    </VBox.margin>
                </PasswordField>
                <TextField fx:id="name" maxWidth="250.0" nodeOrientation="RIGHT_TO_LEFT"
                           style="-fx-background-color: #377;">
                    <VBox.margin>
                        <Insets bottom="10.0"/>
                    </VBox.margin>
                </TextField>
                <TextField fx:id="contactPersonPhone" maxWidth="250.0" nodeOrientation="RIGHT_TO_LEFT"
                           style="-fx-background-color: #377;">
                    <VBox.margin>
                        <Insets bottom="10.0"/>
                    </VBox.margin>
                </TextField>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
        </VBox>
    </children>
</HBox>
