<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TreeView?>
<?import javafx.scene.layout.BorderPane?>
<BorderPane style="-fx-background-color: #333;" xmlns="http://javafx.com/javafx/10.0.2-internal"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="main.java.todoapp.controller.mainscreen.task.TaskContainerController">
   <center>
      <TreeView fx:id="table" minWidth="600.0" onEditStart="#editStart" style="-fx-background-color: #333;"/>
   </center>
   <bottom>
      <Button mnemonicParsing="false" onAction="#openCreateTaskForm" text="Create task" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
         </BorderPane.margin>
      </Button>
   </bottom>
</BorderPane>
